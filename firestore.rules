rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for Multi-Tenancy
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(tenantId) {
      return request.auth.token.tenantId == tenantId;
    }
    
    // Core Collections
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.tenantId);
      allow create: if isSignedIn() && isOwner(request.resource.data.tenantId);
    }
    
    match /tickets/{ticketId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.tenantId);
      allow create: if isSignedIn() && isOwner(request.resource.data.tenantId);
      
      match /events/{eventId} {
        allow read, write: if isSignedIn(); // Usually inherits or scoped by parent
      }
    }
    
    match /assets/{assetId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.tenantId);
      allow create: if isSignedIn() && isOwner(request.resource.data.tenantId);
    }
    
    match /vault/{itemId} {
      // Highly sensitive: only authorized roles within the tenant
      allow read, write: if isSignedIn() && isOwner(resource.data.tenantId);
      allow create: if isSignedIn() && isOwner(request.resource.data.tenantId);
    }

    match /asset_audits/{auditId} {
      allow read, write: if isSignedIn();
    }
  }
}
